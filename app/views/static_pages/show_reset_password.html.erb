<%= form_with(local: true, url: reset_password_url, method: :post) do |form| %>
  <% if !flash[:error].nil? %>
    <!-- existing password error -->
    <% existing_error = flash[:error].include? 'existing' %>

    <!-- new password error -->
    <% new_error = flash[:error].include? 'specifications'%>
  <% end %>

  <div class="field">
    <% if existing_error %>
        <div class="field_with_errors">
    <% end %>

    <%= form.label "Existing Password" %>

    <% if existing_error %>
        </div>
        <div class="field_with_errors">
    <% end %>

    <%= form.password_field :existing_password %>

    <% if existing_error %>
        </div>
    <% end %>
  </div>

  <div class="field">
    <% if new_error %>
        <div class="field_with_errors">
    <% end %>

    <%= form.label 'New Password' %>

    <% if new_error %>
        </div>
        <div class="field_with_errors">
    <% end %>

    <%= form.password_field :password %>

    <% if new_error %>
        </div>
    <% end %>
  </div>

  <div class="field">
    <% if new_error %>
        <div class="field_with_errors">
    <% end %>

    <%= form.label 'New Password Confirmation' %>

    <% if new_error %>
        </div>
        <div class="field_with_errors">
    <% end %>

    <%= form.password_field :password_confirmation %>

    <% if new_error %>
        </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Submit" %>
  </div>
<% end %>

<br/>
<p><%= link_to 'Back', :back %></p>