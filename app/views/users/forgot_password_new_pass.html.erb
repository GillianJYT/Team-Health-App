<h1>Reset Password</h1>

<%= form_with(local: true, url: forgot_password_new_pass_path_url, method: :post) do |form| %>

  <% if !flash[:error].nil? %>
    <% is_invalid = flash[:error].include? "Password and password confirmation do not meet specifications" %>
  <% end %>

  <div style="margin-top: 10px;" class=<%= is_invalid ? "field_with_errors" : "" %>>
    <%= form.label 'New Password' %>
    <%= form.password_field :password %>
  </div>

  <div style="margin-top: 10px;" class=<%= is_invalid ? "field_with_errors" : "" %>>
    <%= form.label 'New Password Confirmation' %>
    <%= form.password_field :password_confirmation %>
  </div>
  <%= form.hidden_field :email, value: @user_email  %>
  
  <div class="actions" style="margin-top: 10px;">
    <%= form.submit "Submit" %>
  </div>
<% end %>

<br/>
<p><%= link_to 'Back', :back %></p>