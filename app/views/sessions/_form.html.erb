<%= form_with(url: login_path, method: :post, local: true) do |form| %>
  <% if !flash[:error].nil? %>
    <% if flash[:error].include? 'Invalid' %>
      <div class="field_with_errors">
    <% end %>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <% if !flash[:error].nil? %>
    <% if flash[:error].include? 'Invalid' %>
      </div>
    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit 'Login' %>
  </div>
<% end %>
