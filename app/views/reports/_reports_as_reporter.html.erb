<table>
  <thead>
    <tr>
      <th><%= 'Reporter' %></th>
      <th><%= 'Reportee' %></th>
      <th><%= 'Description' %></th>
      <th><%= 'Priority' %></th>
      <th><%= 'Submission Time' %></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% Report.all.each do |report| %>
      <% if report.reporter_id == @current_user.id %>
        <tr>
          <td><%= User.find(report.reporter_id).first_name %></td>
          <td><%= User.find(report.reportee_id).first_name %></td>
          <td><%= report.description %></td>
          <% if report.priority == 0 %>
            <td><%= 'High' %></td>
          <% elsif report.priority == 1 %>
            <td><%= 'Medium' %></td>
          <% else %>
            <td><%= 'Low' %></td>
          <% end %>
          <td><%= report.created_at.strftime('%Y-%m-%d %H:%M EST') %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>